@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-8 max-w-lg text-center">
        <h1 class="text-4xl font-bold text-red-600">Oops!</h1>
        <h2 class="text-lg text-gray-700 dark:text-gray-300 mt-2">
            An unexpected error occurred.
        </h2>

        @if (Model.ShowRequestId)
        {
            <p class="mt-4 text-gray-600 dark:text-gray-400">
                <strong>Request ID:</strong> <span class="text-gray-800 dark:text-white">@Model.RequestId</span>
            </p>
        }

        <div class="mt-6">
            <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200">Development Mode</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm mt-2">
                Swapping to <strong>Development</strong> environment will display more detailed information about the error.
            </p>
            <p class="text-sm text-red-500 dark:text-red-400 font-medium mt-2">
                ⚠ The Development environment should not be enabled in production as it may expose sensitive information.
            </p>
        </div>

        <div class="mt-6">
            <a href="/" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition">
                🔄 Go to Homepage
            </a>
        </div>
    </div>
</div>
