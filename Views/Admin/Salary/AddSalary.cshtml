<main class="h-full overflow-y-auto">
    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Quản Lý Lương
        </h2>
        
        <!-- Salary Management Form -->
        <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
            <form>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Tên nhân viên</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="Nguyễn Văn A" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Mã nhân viên</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="NV001" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Phòng ban</span>
                        <select
                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
                            <option>IT</option>
                            <option>Nhân sự</option>
                            <option>Tài chính</option>
                            <option>Kinh doanh</option>
                        </select>
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Chức vụ</span>
                        <select
                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
                            <option>Nhân viên</option>
                            <option>Trưởng nhóm</option>
                            <option>Quản lý</option>
                            <option>Giám đốc</option>
                        </select>
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Lương cơ bản</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="10,000,000" type="number" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Lương làm thêm giờ</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="1,000,000" type="number" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Thưởng</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="2,000,000" type="number" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Bảo hiểm</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="500,000" type="number" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Thuế</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="1,000,000" type="number" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Các khoản khấu trừ khác</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            placeholder="200,000" type="number" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Ngày thanh toán</span>
                        <input
                            class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                            type="date" />
                    </label>
                    <label class="block">
                        <span class="text-gray-700 dark:text-gray-400">Phương thức thanh toán</span>
                        <select
                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
                            <option>Chuyển khoản</option>
                            <option>Tiền mặt</option>
                        </select>
                    </label>
                </div>
                <div class="mt-6">
                    <button
                        class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                        Lưu thông tin
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>