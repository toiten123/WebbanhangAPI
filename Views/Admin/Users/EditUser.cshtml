<main class="h-full overflow-y-auto">
    <div class="container px-6 mx-auto grid">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-2xl font-semibold text-gray-200">Thêm Người Dùng Mới</h2>
            <button onclick="history.back()" class="px-4 py-2 bg-gray-600 text-white rounded-lg flex items-center gap-2 hover:bg-gray-700">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Quay lại
            </button>
        </div>

        <!-- Form Container -->
        <div class="w-full max-w-4xl mx-auto">
            <form class="space-y-6">
                <!-- Basic Information -->
                <div class="bg-gray-800 rounded-lg p-6">
                    <h3 class="text-lg font-medium mb-4 text-gray-200">Thông tin cơ bản</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Mã nhân viên
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="text" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                placeholder="VD: NV001"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Họ và tên
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="text" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                placeholder="VD: Nguyễn Văn A"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Email
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="email" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                placeholder="example@email.com"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Số điện thoại
                            </label>
                            <input type="tel" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                placeholder="0123456789"
                            >
                        </div>
                    </div>
                </div>

                <!-- Work Information -->
                <div class="bg-gray-800 rounded-lg p-6">
                    <h3 class="text-lg font-medium mb-4 text-gray-200">Thông tin công việc</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Phòng ban
                                <span class="text-red-500">*</span>
                            </label>
                            <select class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-purple-500">
                                <option value="">Chọn phòng ban</option>
                                <option value="it">IT</option>
                                <option value="hr">Nhân sự</option>
                                <option value="finance">Tài chính</option>
                                <option value="sales">Kinh doanh</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Chức vụ
                                <span class="text-red-500">*</span>
                            </label>
                            <select class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-purple-500">
                                <option value="">Chọn chức vụ</option>
                                <option value="staff">Nhân viên</option>
                                <option value="leader">Trưởng nhóm</option>
                                <option value="manager">Quản lý</option>
                                <option value="director">Giám đốc</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Ngày vào làm
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="date" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-purple-500"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Trạng thái
                            </label>
                            <select class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-purple-500">
                                <option value="active">Đang làm việc</option>
                                <option value="probation">Thử việc</option>
                                <option value="resigned">Đã nghỉ việc</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Account Information -->
                <div class="bg-gray-800 rounded-lg p-6">
                    <h3 class="text-lg font-medium mb-4 text-gray-200">Thông tin tài khoản</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Tên đăng nhập
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="text" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Mật khẩu
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="password" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Xác nhận mật khẩu
                                <span class="text-red-500">*</span>
                            </label>
                            <input type="password" 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                required
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Vai trò người dùng
                            </label>
                            <select class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-purple-500">
                                <option value="user">Người dùng</option>
                                <option value="admin">Quản trị viên</option>
                                <option value="super_admin">Quản trị viên cấp cao</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="bg-gray-800 rounded-lg p-6">
                    <h3 class="text-lg font-medium mb-4 text-gray-200">Thông tin thêm</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Địa chỉ
                            </label>
                            <textarea 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                rows="3"
                            ></textarea>
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2 text-gray-300">
                                Ghi chú
                            </label>
                            <textarea 
                                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:border-purple-500"
                                rows="3"
                            ></textarea>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-end space-x-4">
                    <button type="button" 
                        class="px-6 py-2.5 border border-gray-600 text-gray-300 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 focus:ring-offset-gray-800"
                        onclick="history.back()"
                    >
                        Hủy
                    </button>
                    <button type="submit" 
                        class="px-6 py-2.5 bg-purple-600 text-white rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2 focus:ring-offset-gray-800"
                    >
                        Thêm người dùng
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>