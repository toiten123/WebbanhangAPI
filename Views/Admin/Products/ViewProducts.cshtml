@{
    Layout = "~/Views/Shared/Layouts/_LayoutAdmin.cshtml";
}

<main class="h-full overflow-y-auto">
    <div class="container px-6 mx-auto grid">
        <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200 ">
            Quản Lý Hàng Hóa
        </h2>
        <div class="mb-6 space-x-2 flex flex-wrap gap-2">
            <a class="inline-flex items-center px-4 py-2 bg-[#90EE90] hover:bg-[#7FDD7F] text-gray-700 rounded-lg text-sm font-medium transition-colors"
                asp-controller="Admin" asp-action="AddProducts">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Tạo mới sản phẩm
            </a>

            <button
                class="inline-flex items-center px-4 py-2 bg-[#F0E68C] hover:bg-[#DFD57B] text-gray-700 rounded-lg text-sm font-medium transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
                Tải từ file
            </button>

            <button
                class="inline-flex items-center px-4 py-2 bg-[#E6E6FA] hover:bg-[#D5D5E9] text-gray-700 rounded-lg text-sm font-medium transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <path d="M6 9L6 2H18L18 9"></path>
                    <path d="M6 18H4A2 2 0 0 1 2 16V11A2 2 0 0 1 4 9H20A2 2 0 0 1 22 11V16A2 2 0 0 1 20 18H18"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
                In dữ liệu
            </button>

            <button
                class="inline-flex items-center px-4 py-2 bg-[#ADD8E6] hover:bg-[#9CC7D5] text-gray-700 rounded-lg text-sm font-medium transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
                Sao chép
            </button>

            <button
                class="inline-flex items-center px-4 py-2 bg-[#90EE90] hover:bg-[#7FDD7F] text-gray-700 rounded-lg text-sm font-medium transition-colors"
                id="exportExcelBtn">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                Xuất Excel
            </button>

            <button
                class="inline-flex items-center px-4 py-2 bg-[#FFB6C1] hover:bg-[#EEA5B0] text-gray-700 rounded-lg text-sm font-medium transition-colors"
                id="exportPdfBtn">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
                Xuất PDF
            </button>

            <button
                class="inline-flex items-center px-4 py-2 bg-[#D3D3D3] hover:bg-[#C2C2C2] text-gray-700 rounded-lg text-sm font-medium transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
                Xóa tất cả
            </button>
        </div>

        <div class="w-full overflow-hidden rounded-lg shadow-xs bg-white-800 bg-dark-secondary border-b border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-700">
            <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap table-auto">
                    <thead>
                        <tr class="text-xs font-semibold tracking-wide text-left text-black-400 uppercase border-b border-gray-700 bg-dark-secondary">
                            <th class="px-4 py-3 w-1/24">
                                <input type="checkbox" class="rounded border-gray-600 bg-gray-700 text-purple-600">
                            </th>
                            <th class="px-4 py-3 w-1/24">ID</th>
                            <th class="px-4 py-3 w-1/4">Tên sản phẩm</th>
                            <th class="px-4 py-3 w-1/12">Loại</th>
                            <th class="px-4 py-3 w-1/24">Nhà sản xuất</th>
                            <th class="px-4 py-3 w-1/24">Giá</th>
                            <th class="px-4 py-3 w-1/12">Số lượng</th>
                            <th class="px-4 py-3 w-1/4 max-w-xs overflow-hidden text-ellipsis whitespace-nowrap">Mô tả</th>
                            <th class="px-4 py-3 w-1/12">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody class="bg-dark-secondary divide-y divide-gray-700 text-black-400">
                        
                    </tbody>
                </table>
            </div>

            <div
                class="grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-300 uppercase border-t border-gray-700 bg-gray-800 dark:bg-gray-800 sm:grid-cols-9">
                <span class="flex items-center col-span-3">
                    Hiển thị 1-3 của 100
                </span>
                <span class="col-span-2"></span>
                <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
                    <nav aria-label="Table navigation">
                        <ul class="inline-flex items-center">
                            <li>
                                <button
                                    class="px-3 py-1 rounded-md rounded-l-lg focus:outline-none focus:shadow-outline-purple">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                        <path
                                            d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                            clip-rule="evenodd" fill-rule="evenodd"></path>
                                    </svg>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="px-3 py-1 text-white transition-colors duration-150 bg-purple-600 rounded-md focus:outline-none focus:shadow-outline-purple">
                                    1
                                </button>
                            </li>
                            <li>
                                <button
                                    class="px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple">
                                    2
                                </button>
                            </li>
                            <li>
                                <button
                                    class="px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple">
                                    3
                                </button>
                            </li>
                            <li>
                                <button
                                    class="px-3 py-1 rounded-md rounded-r-lg focus:outline-none focus:shadow-outline-purple">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                        <path
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd" fill-rule="evenodd"></path>
                                    </svg>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </span>
            </div>
        </div>
    </div>
</main>

<partial name="Products/script/ViewProducts/PDFExport"/>
<partial name="Products/script/ViewProducts/ExcelExport"/>
<partial name="Products/script/ViewProducts/LoadProducts"/>
<partial name="Products/script/ViewProducts/FunctionProducts"/>
