// Hàm nén ảnh trước khi upload với chất lượng tuỳ chỉnh
async function compressImage(file, quality) {
    return new Promise((resolve) => {
        const reader = new FileReader();
        reader.readAsDataURL(file);
        reader.onload = (event) => {
            const img = new Image();
            img.src = event.target.result;
            img.onload = () => {
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');

                // Giữ nguyên tỷ lệ ảnh, nhưng giảm kích thước về tối đa 1024px (tuỳ chỉnh)
                const MAX_WIDTH = 1024;
                const MAX_HEIGHT = 1024;
                let width = img.width;
                let height = img.height;

                if (width > MAX_WIDTH || height > MAX_HEIGHT) {
                    if (width > height) {
                        height *= MAX_WIDTH / width;
                        width = MAX_WIDTH;
                    } else {
                        width *= MAX_HEIGHT / height;
                        height = MAX_HEIGHT;
                    }
                }

                canvas.width = width;
                canvas.height = height;
                ctx.drawImage(img, 0, 0, width, height);

                // Chuyển đổi canvas thành Blob với chất lượng yêu cầu
                canvas.toBlob((blob) => {
                    resolve(blob);
                }, file.type, quality);

            };
        };
    });
}

// Hàm tải ảnh đã nén lên Cloudinary
async function uploadImageToCloudinary(file, folderName, quality) {
    let compressedFile = await compressImage(file, quality); // Nén ảnh với chất lượng tuỳ chỉnh
    let formData = new FormData();
    formData.append('file', compressedFile, file.name); // Gửi Blob thay vì file gốc
    formData.append('upload_preset', 'my_preset'); // Thay bằng upload preset của bạn
    formData.append('folder', folderName); // Đặt ảnh vào folder sản phẩm trên Cloudinary

    let response = await fetch('https://api.cloudinary.com/v1_1/de8emj0f5/image/upload', {
        method: 'POST',
        body: formData
    });

    let data = await response.json();
    if (data.secure_url) {
        return data.secure_url; // Trả về URL của ảnh đã upload
    } else {
        console.error("Không thể tải ảnh lên Cloudinary", data);
        return null;
    }
}

