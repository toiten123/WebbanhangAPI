<script>
document.addEventListener('DOMContentLoaded', () => {
    const currentPrice = document.getElementById('currentPrice');
    const discountPercentage = document.getElementById('discountPercentage');
    const discountedPrice = document.getElementById('discountedPrice');

    // Định dạng số có dấu chấm phân cách hàng nghìn
    function formatNumberWithDots(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    }

    // Chỉ cho phép nhập số vào ô "Giá Hiện Tại"
    currentPrice.addEventListener('input', (event) => {
        let value = event.target.value.replace(/\D/g, ""); // Xóa tất cả ký tự không phải số
        event.target.value = formatNumberWithDots(value);
        calculateDiscountedPrice();
    });

    // Hàm tính giá sau giảm
    function calculateDiscountedPrice() {
        let price = parseFloat(currentPrice.value.replace(/\./g, "")) || 0; // Loại bỏ dấu chấm khi chuyển về số
        let discount = parseFloat(discountPercentage.value) || 0;

        if (price > 0 && discount >= 0 && discount <= 100) {
            let finalPrice = price - (price * discount / 100);
            discountedPrice.value = formatNumberWithDots(finalPrice.toFixed(0)); // Không có số thập phân và có dấu `.`
        } else {
            discountedPrice.value = "";
        }
    }

    discountPercentage.addEventListener('input', calculateDiscountedPrice);
});
</script>

